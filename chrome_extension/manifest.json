{
  "manifest_version": 3,
  "name": "Native Voice Tab Controller",
  "version": "1.0",
  "description": "Control Chrome tabs via Native Messaging",
  "permissions": [
    "tabs", "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
